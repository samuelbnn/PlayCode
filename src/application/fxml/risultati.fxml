<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane fx:controller="application.RisultatiController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="600" prefHeight="400">

    <top>
        <Label fx:id="titoloLabel" text="Riassunto della Partita"
               style="-fx-font-size: 20px; -fx-padding: 15px;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <ListView fx:id="risultatiListView" prefHeight="300" />
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="btnChiudi" text="Chiudi" onAction="#chiudiSchermata" />
        </HBox>
    </bottom>

</BorderPane>
