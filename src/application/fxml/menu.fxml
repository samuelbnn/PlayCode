<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.MenuController"
            prefHeight="800.0" prefWidth="1200.0"
            style="-fx-background-color: #f8f9fa;"
            stylesheets="@style.css"
            >

    <!-- CENTRO: logo + benvenuto + pulsanti -->
    <center>
        <VBox alignment="CENTER" spacing="30">
            <ImageView fitHeight="200" fitWidth="200" preserveRatio="true">
                <image>
                    <Image url="@img/logo.png"/>
                </image>
            </ImageView>

            <Label fx:id="userNameLabel"
                   text="Benvenuto!"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2D3E50;"/>

            <GridPane hgap="30" vgap="30" alignment="CENTER">
                <VBox alignment="CENTER" spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="0">
                    <Button text="Leggi il Codice" onAction="#apriLeggiCodice" prefWidth="250" prefHeight="100" styleClass="menu-button"/>
                    <ProgressBar fx:id="progressBarLeggiCodice" prefWidth="250" progress="0.0"/>
                </VBox>
                <VBox alignment="CENTER" spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="1">
                    <Button text="Stampa l'Output" onAction="#apriStampaOutput" prefWidth="250" prefHeight="100" styleClass="menu-button"/>
                    <ProgressBar fx:id="progressBarScritturaOutput" prefWidth="250" progress="0.0"/>
                </VBox>
                
                <VBox alignment="CENTER" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="0">
                    <Button text="Trova l'Errore" onAction="#apriTrovaErrore" prefWidth="250" prefHeight="100" styleClass="menu-button"/>
                    <ProgressBar fx:id="progressBarTrovaErrore" prefWidth="250" progress="0.0"/>
                </VBox>
                <VBox alignment="CENTER" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <Button text="Completa il Codice" onAction="#apriCompletaCodice" prefWidth="250" prefHeight="100" styleClass="menu-button"/>
                    <ProgressBar fx:id="progressBarCompletaCodice" prefWidth="250" progress="0.0"/>
                </VBox>

                <VBox alignment="CENTER" spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="0">
                    <Button text="Linked List" onAction="#apriLinkedList" prefWidth="250" prefHeight="100" styleClass="menu-button"/>
                    <ProgressBar fx:id="progressBarLinkedList" prefWidth="250" progress="0.0"/>
                </VBox>
                <VBox alignment="CENTER" spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
                    <Button text="Static or Not" onAction="#apriStaticCode" prefWidth="250" prefHeight="100" styleClass="menu-button"/>
                    <ProgressBar fx:id="progressBarStaticCode" prefWidth="250" progress="0.0"/>
                </VBox>
            </GridPane>
        </VBox>
    </center>

    <!-- FOOTER CON LOGOUT -->
    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <Button text="Logout" onAction="#logout"
                    style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>

</BorderPane>
